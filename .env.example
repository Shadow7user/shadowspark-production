# ==========================================================
# ShadowSpark Platform — Environment Variables
# ==========================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# Never commit your real .env file — it is already in .gitignore.
# ==========================================================

# ----------------------------------------------------------
# Database (Neon PostgreSQL)
# Get your connection string from https://console.neon.tech
# ----------------------------------------------------------
DATABASE_URL="postgresql://username:password@ep-your-project.region.aws.neon.tech/neondb?sslmode=require"
DIRECT_URL="postgresql://username:password@ep-your-project.region.aws.neon.tech/neondb?sslmode=require"

# ----------------------------------------------------------
# NextAuth / Auth.js v5
# Generate a secret: openssl rand -base64 32
# ----------------------------------------------------------
AUTH_SECRET="replace-with-openssl-rand-base64-32-output"
AUTH_URL="http://localhost:3000"

# ----------------------------------------------------------
# Sentry (optional — error monitoring)
# https://sentry.io
# ----------------------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ----------------------------------------------------------
# Google Analytics (optional)
# ----------------------------------------------------------
NEXT_PUBLIC_GA_ID=""

# ----------------------------------------------------------
# OpenAI (optional — AI features)
# ----------------------------------------------------------
OPENAI_API_KEY=""
